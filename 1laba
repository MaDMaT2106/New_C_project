#include <iostream>
#include <fstream>
#include <string>
#include <stdio.h>
#include <cstdlib>
#include <cstring>
#define keyWordsSize 2
using namespace std;


int main(int argc, char** argv){
    if (argc < 2){
        cout << "Please Use : ./SoftName file [...]" << endl;
        return 0;
    }
    
    string my_string;
    ifstream fN(argv[1]);
    char *keyWords[keyWordsSize] = {"int","float"};
    char arr_tmp[81];
  	int k=0,i=0,j=0;
 	bool flag = false;
 
	    if (fN.is_open()) {
	        while (!fN.eof())
	        {
	            getline(fN, my_string);
	            if (my_string.length() > 80) 
					my_string.erase(80, my_string.length());
				while(!my_string[i]=='\0')
				{
					j=0;
					while(!my_string[i]==' ')
					{
						arr_tmp[j]=my_string[i];
						j++;
						i++;
						
					}

					i++;
					for(k=0;k<(keyWordsSize);k++){
							if(arr_tmp==keyWords[k]){
								for(k=0;k<=j;k++)
									cout << "\033[37;1m\033[40m" <<  arr_tmp[k];
								k = keyWordsSize-1;
								flag = true;
							}
					}
					if (flag == false) 
						for(k=0;k<=j;k++)
							cout << "\033[37m\033[40m" <<  arr_tmp[k];
					flag = false;

					 memset(arr_tmp, 0, 81);

					char key = getchar();
					if (key == 27)
						return 0;

				}
				if(!fN.eof())
	                cout<<endl;
	        }
	    }
		else
        	cout << argv[1] << ": No such file or directory" << endl;
    return 0;
}
